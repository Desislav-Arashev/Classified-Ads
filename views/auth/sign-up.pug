extends ../_shared/_nav

block body
    .container.text-left
        h3 New Users Registration
        hr
        script.
            function SubmitForm2(x)
            {
            if(x.username.value=="")
            {
            alert("Please enter an username!");
            x.username.focus();
            return false;
            }
            if(x.password.value=="")
            {
            alert("Please enter your password!");
            x.password.focus();
            return false;
            }
            if(x.name.value=="")
            {
            alert("Please enter your name!");
            x.name.focus();
            return false;
            }
            if(x.user_email.value=="")
            {
            alert("Please enter your email address!");
            x.user_email.focus();
            return false;
            }
            if(!CheckValidEmail(x.user_email.value) )
            {
            alert(x.user_email.value+" is not a valid email address!");
            x.user_email.focus();
            return false;
            }
            return true;
            }
            function CheckValidEmail(strEmail)
            {
            if (strEmail.search(/^\\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/) != -1)
            {
            return true;
            }
            else
            {
            return false;
            }
            }
        | In order to register, please fill the form below.
        br
        br
        form#main(action='index.php', method='post', onsubmit='return SubmitForm2(this)')
            input(type='hidden', name='mod', value='registration')
            input(type='hidden', name='ProceedSend', value='1')
            fieldset
                ol
                    li
                        label(for='username') Username(*):
                        input(type='text', name='username', value='', required='', size='30')
                    li
                        label(for='password')
                            | Password(*):
                        input(type='password', name='password', required='', size='30')
                    li
                        label(for='user_type') I am
                        select#user_type(name='user_type')
                            option(value='1') Individual
                            option(value='2') Business
                    li
                        label(for='name')
                            | Your Name(*):
                        input(type='text', name='name', value='', required='', size='30')
                    li
                        label(for='user_email')
                            | Email(*):
                        input(type='email', name='user_email', value='', required='', size='30')
                    li
                        label(for='user_phone')
                            | Phone:
                        input(type='text', name='user_phone', value='', size='30')
                    //
                        <input type="checkbox" name="newsletter"  value="1">
                        I would like to subscribe to the	www.phpclassifiedads.com	newsletter
                    li
                        label(for='code')
                            img(src='../../static/include/sec_image.gif', width='100', height='30')
                        input#code(name='code', placeholder='Please enter the code', type='text', required='')
            | (*) required fields
            fieldset
                button(type='submit') Submit
