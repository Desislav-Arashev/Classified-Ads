        #main-login-form
            a(href='javascript:HideLogin()')
                img.close-login-icon(src='../../static/images/closeicon.png')
            h3.lfloat Login
            hr.clear
            script.
                function ValidateLoginForm(x)
                {
                if(x.Email.value==""){
                alert("Please enter your username!");
                x.Email.focus();
                return false;
                }
                else
                if(x.Password.value==""){
                alert("Please enter your password!!");
                x.Password.focus();
                return false;
                }
                return true;
                }
            form.no-margin(action='/auth/sign-in', method='post', onsubmit='return ValidateLoginForm(this)')
                table(border='0', cellspacing='1')
                    tr
                        td Username:
                        td
                            input.form-field(type='text', size='40', name='username')
                    tr
                        td Password:
                        td
                            input.form-field(size='40', type='password', name='password')
                    tr
                        td(colspan='2', align='right')
                            br
                            a.lfloat.margin-20(href='index.php?mod=forgotten_password') forgotten password?
                            input.ibutton.rfloat.margin-20(type='submit', value='Login')
            br
